<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.opcoach.rcpa.rental.ui.commands.CopyCustomer"
            commandId="org.eclipse.ui.edit.copy">
         <enabledWhen>
            <reference
                  definitionId="com.opcoach.rcpa.rental.ui.commands.customerSelected">
            </reference>
         </enabledWhen>
         <activeWhen>
            <reference
                  definitionId="com.opcoach.rcpa.rental.ui.commands.customerSelected">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:com.opcoach.rental.ui.rentalagencyview?after=additions">
         <command
               commandId="org.eclipse.ui.edit.copy"
               icon="icons/RentalCommand.png"
               label="Copy Customer"
               style="push"
               tooltip="Copie d&apos;un customer">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.opcoach.rcpa.rental.ui.commands.customerSelected">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.opcoach.rcpa.rental.ui.commands.customerSelected">
         <iterate>
            <instanceof
                  value="com.opcoach.training.rental.Customer">
            </instanceof>
         </iterate>
      </definition>
   </extension>

</plugin>
